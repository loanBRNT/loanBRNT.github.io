---
import Layout from '@/layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { SITE } from '@/config';
import { Image } from 'astro:assets';
import profilePhoto from '@/site-assets/profile_photo.jpeg';
import { readFileSync } from 'fs';
import { join } from 'path';
import { parseMarkdown } from '@/lib/simple-markdown';

const socialClasses: Record<string, string> = {
  github: 'text-purple-500/80 hover:text-purple-500',
  linkedin: 'text-sky-500/80 hover:text-sky-500',
  youtube: 'text-rose-500/80 hover:text-rose-500',
};

const researchProjects = (await getCollection('research')).sort(
  (a, b) => a.data.order - b.data.order
);

const featuredResearch = researchProjects.filter((project) => project.data.featured);
const researchHighlights = (featuredResearch.length > 0
  ? featuredResearch
  : researchProjects
).slice(0, 3);

const projects = (await getCollection('projects'))
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, SITE.homeProjects.count);
---

<Layout title="Welcome">
  <!-- 1. Hero Section -->
  <section
    class="flex flex-col-reverse md:flex-row items-center gap-8 sm:gap-12 lg:gap-16 mb-24 lg:mb-32"
  >
    <div class="flex-1 text-center md:text-left">
      <div
        class="hero-content"
        set:html={(() => {
          try {
            const fullPath = join(process.cwd(), SITE.hero.filePath);
            const markdown = readFileSync(fullPath, 'utf-8');
            return parseMarkdown(markdown.replace('{author}', SITE.author));
          } catch (e) {
            return `<h1>I'm ${SITE.author}, developer and designer.</h1><p>${SITE.homeHeroDescription}</p>`;
          }
        })()}
      />
      <div class="flex flex-wrap justify-center md:justify-start gap-4 sm:gap-6">
        {
          Object.entries(SITE.social).map(([platform, link]) => (
            <a
              href={link}
              aria-label={`Visit our ${platform} profile`}
              class={`text-xs font-bold uppercase tracking-widest transition-all no-underline ${
                socialClasses[platform.toLowerCase()] || 'text-muted-foreground hover:text-primary'
              }`}
            >
              {platform}
            </a>
          ))
        }
      </div>
    </div>
    <div
      class="w-32 h-32 sm:w-40 sm:h-40 md:w-48 md:h-48 lg:w-56 lg:h-56 3xl:w-72 3xl:h-72 rounded-2xl overflow-hidden border border-border shadow-xl shrink-0"
    >
      <Image
        src={profilePhoto}
        alt={SITE.author}
        width={400}
        height={400}
        widths={[200, 400, 800]}
        sizes="(max-width: 639px) 128px, (max-width: 1023px) 160px, 400px"
        class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 ease-out scale-105 hover:scale-100"
      />
    </div>
  </section>

  <div class="flex flex-col gap-24 lg:gap-32">
    <!-- 2. Research Highlights -->
    {
      researchHighlights.length > 0 && (
        <section>
          <div class="flex items-baseline justify-between mb-8 sm:mb-12">
            <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground">
              Research Highlights
            </h2>
            <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70" />
            <a
              href="/research"
              class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
            >
              All Research
            </a>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
            {researchHighlights.map((project) => {
              const isExternal = project.data.directLink && Boolean(project.data.link);
              const projectUrl = isExternal ? project.data.link : `/research/${project.id}`;
              const target = isExternal ? '_blank' : '_self';

              return (
                <article class="flex flex-col h-full p-6 rounded-2xl bg-secondary/30 border border-border/50 hover:bg-secondary/50 hover:border-border transition-all duration-300 group">
                  <div class="flex-1">
                    <div class="flex items-start justify-between gap-4 mb-3">
                      <a
                        href={projectUrl}
                        target={target}
                        rel={isExternal ? 'noopener noreferrer' : undefined}
                        class="no-underline"
                      >
                        <h3 class="text-lg sm:text-xl font-bold leading-tight group-hover:text-primary transition-colors">
                          {project.data.title}
                        </h3>
                      </a>
                          <span
                            class={`inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wide ${
                              project.data.status === 'ongoing'
                                ? 'bg-emerald-500/15 text-emerald-700 dark:text-emerald-300 border border-emerald-500/30'
                                : project.data.status === 'under review'
                                  ? 'bg-amber-500/15 text-amber-700 dark:text-amber-300 border border-amber-500/30'
                                  : project.data.status === 'completed'
                                    ? 'bg-indigo-500/15 text-indigo-700 dark:text-indigo-300 border border-indigo-500/30'
                                    : 'bg-slate-500/10 text-slate-700 dark:text-slate-300 border border-slate-500/20'
                            }`}
                          >
                            {project.data.status === 'under review'
                              ? 'Under Review'
                              : project.data.status}
                          </span>
                    </div>

                    <p class="text-sm text-muted-foreground leading-relaxed mb-4">
                      {project.data.description}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-4">
                      {project.data.tags.slice(0, 3).map((tag) => (
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-background border border-border text-muted-foreground">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>

                  <div class="flex items-center gap-3 pt-4 border-t border-border/50">
                    <a
                      href={projectUrl}
                      target={target}
                      rel={isExternal ? 'noopener noreferrer' : undefined}
                      class="inline-flex items-center gap-2 text-sm font-medium text-foreground hover:text-primary transition-colors no-underline"
                    >
                      {isExternal ? 'Visit Project' : 'View Details'}
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <>
                          <path d="M7 7h10v10" />
                          <path d="M7 17 17 7" />
                        </>
                      </svg>
                    </a>
                  </div>
                </article>
              );
            })}
          </div>
        </section>
      )
    }

    <!-- 3. Projects -->
    {
      SITE.homeProjects.enabled && projects.length > 0 && (
        <section>
          <div class="flex items-baseline justify-between mb-8 sm:mb-12">
            <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground">
              Projects
            </h2>
            <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70" />
            <a
              href="/projects"
              aria-label="View all projects"
              class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
            >
              All Projects
            </a>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
            {projects.map((project) => {
              const externalUrl = project.data.link || project.data.video;
              const isExternal = project.data.directLink && Boolean(externalUrl);
              const projectUrl = isExternal ? externalUrl : `/projects/${project.id}`;
              const target = isExternal ? '_blank' : '_self';
              const actionLabel = isExternal
                ? project.data.video && !project.data.link
                  ? 'Watch Video'
                  : 'Visit Website'
                : 'View Details';

              return (
                <article class="flex flex-col h-full p-6 rounded-2xl bg-secondary/30 border border-border/50 hover:bg-secondary/50 hover:border-border transition-all duration-300 group">
                  <div class="flex-1">
                    <a
                      href={projectUrl}
                      target={target}
                      rel={isExternal ? 'noopener noreferrer' : undefined}
                      class="no-underline"
                    >
                      <h3 class="text-lg sm:text-xl font-bold leading-tight mb-3 group-hover:text-primary transition-colors">
                        {project.data.title}
                      </h3>
                    </a>

                    {project.data.types && project.data.types.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 mb-3">
                        {project.data.types.map((type) => (
                          <span
                            class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wide ${
                              type === 'open-source'
                                ? 'bg-emerald-500/15 text-emerald-700 dark:text-emerald-300 border border-emerald-500/30'
                                : type === 'hackathon'
                                  ? 'bg-amber-500/15 text-amber-700 dark:text-amber-300 border border-amber-500/30'
                                  : type === 'internship'
                                    ? 'bg-sky-500/15 text-sky-700 dark:text-sky-300 border border-sky-500/30'
                                    : type === 'youtube'
                                      ? 'bg-rose-500/15 text-rose-700 dark:text-rose-300 border border-rose-500/30'
                                      : 'bg-slate-500/10 text-slate-700 dark:text-slate-300 border border-slate-500/20'
                            }`}
                          >
                            {type === 'open-source'
                              ? 'Open Source'
                              : type === 'youtube'
                                ? 'YouTube'
                                : type}
                          </span>
                        ))}
                      </div>
                    )}

                    <p class="text-sm text-muted-foreground leading-relaxed mb-4">
                      {project.data.description}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-4">
                      {project.data.tags.slice(0, 3).map((tag) => (
                        <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-background border border-border text-muted-foreground">
                          {tag}
                        </span>
                      ))}
                    </div>
                  </div>

                  <div class="flex items-center gap-3 pt-4 border-t border-border/50">
                    <a
                      href={projectUrl}
                      target={target}
                      rel={isExternal ? 'noopener noreferrer' : undefined}
                      class="inline-flex items-center gap-2 text-sm font-medium text-foreground hover:text-primary transition-colors no-underline"
                    >
                    {actionLabel}
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <>
                          <path d="M7 7h10v10" />
                          <path d="M7 17 17 7" />
                        </>
                      </svg>
                    </a>

                    {project.data.github && (
                      <a
                        href={project.data.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="ml-auto inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-foreground transition-colors no-underline"
                        aria-label={`GitHub repository for ${project.data.title}`}
                      >
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                          <path d="M9 18c-4.51 2-5-2-7-2" />
                        </svg>
                        GitHub
                      </a>
                    )}
                  </div>
                </article>
              );
            })}
          </div>
        </section>
      )
    }

    <!-- 4. Publications -->
    <section>
      <div class="flex items-baseline justify-between mb-8 sm:mb-12">
        <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-muted-foreground">
          Publications
        </h2>
        <div class="h-px flex-1 mx-4 sm:mx-8 bg-border opacity-70"></div>
        <a
          href="/publications"
          class="px-2 py-0.5 rounded-md text-xs font-bold uppercase tracking-widest hover:bg-accent hover:text-primary transition-all no-underline"
        >
          Full List
        </a>
      </div>
      <div class="p-6 rounded-2xl bg-secondary/30 border border-border/50">
        <p class="text-sm sm:text-base text-muted-foreground leading-relaxed">
          {SITE.publicationsDescription}
        </p>
        <a
          href="/publications"
          class="inline-flex items-center gap-2 mt-4 text-sm font-medium text-foreground hover:text-primary transition-colors no-underline"
        >
          View Publications
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path d="M7 7h10v10" />
              <path d="M7 17 17 7" />
            </>
          </svg>
        </a>
      </div>
    </section>

  </div>
</Layout>

<style>
  .hero-content :global(h1) {
    font-size: 1.875rem; /* text-3xl */
    line-height: 1.1;
    font-weight: 900; /* font-black */
    letter-spacing: -0.025em; /* tracking-tight */
    margin-bottom: 1rem; /* mb-4 */
    color: var(--color-foreground);
  }

  @media (min-width: 640px) {
    .hero-content :global(h1) {
      font-size: 2.25rem; /* sm:text-4xl */
    }
  }

  @media (min-width: 1024px) {
    .hero-content :global(h1) {
      font-size: 3rem; /* lg:text-5xl */
    }
  }

  @media (min-width: 1920px) {
    .hero-content :global(h1) {
      font-size: 3.75rem; /* 3xl:text-6xl */
    }
  }

  .hero-content :global(p) {
    font-size: 1rem; /* text-base */
    line-height: 1.625; /* leading-relaxed */
    color: var(--color-muted-foreground);
    margin-bottom: 2rem; /* mb-8 */
    max-width: 42rem; /* max-w-2xl */
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 640px) {
    .hero-content :global(p) {
      font-size: 1.125rem; /* sm:text-lg */
    }
  }

  @media (min-width: 768px) {
    .hero-content :global(p) {
      margin-left: 0;
      margin-right: 0;
    }
  }

  @media (min-width: 1024px) {
    .hero-content :global(p) {
      font-size: 1.25rem; /* lg:text-xl */
    }
  }
</style>
