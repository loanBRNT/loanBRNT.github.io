{
  "$ref": "#/definitions/research",
  "definitions": {
    "research": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["ongoing", "under review", "completed"],
          "default": "ongoing"
        },
        "startDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "endDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "collaborators": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": ["label", "url"],
            "additionalProperties": false
          },
          "default": []
        },
        "order": {
          "type": "number",
          "default": 0
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "directLink": {
          "type": "boolean",
          "default": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": ["title", "description"],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}
